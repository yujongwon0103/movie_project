{{>layouts/header}}
{{#movie}}
    <div class="container">
        <div class="row">
            <div class="col-5">
                {{#mainPoster}}
                    <img class="bg_img" src="{{imgUrl}}" onerror="this.src='{{altImgUrl}}'"
                         style="maxWidth:420px;maxHeight:600px;">
                {{/mainPoster}}
            </div>
            <div class="col-5">
                <div class="container">
                    <h2 class="title_kor">
                        <bold>{{titleKor}}</bold>
                    </h2>
                    <span>{{titleEng}}</span>
                    <table class="table table-borderless">
                        <tbody>
                        <tr>
                            <th scope="row">개봉</th>
                            <td>{{releaseDate}}</td>
                            <th scope="row">평점</th>
                            <td></td>
                        </tr>
                        <tr>
                            <th scope="row">장르</th>
                            <td>{{genre}}</td>
                            <th scope="row">누적관객</th>
                            <td></td>
                        </tr>
                        <tr>
                            <th scope="row">국가</th>
                            <td>{{nation}}</td>
                            <th scope="row">박스오피스</th>
                            <td></td>
                        </tr>
                        <tr>
                            <th scope="row">등급</th>
                            <td>{{rating}}</td>
                            <th scope="row">러닝타임</th>
                            <td>{{runtime}}분</td>
                        </tr>
                        </tbody>
                    </table>
                    <a href="{{source}}">영화 정보 출처</a>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <ul class="nav nav-underline" id="tab">
            <li class="nav-item" id="tab-detail">
                <a class="nav-link link-dark" id="detail">상세정보</a>
            </li>
            <li class="nav-item" id="tab-people">
                <a class="nav-link link-dark" id="people">출연/제작</a>
            </li>
            <li class="nav-item" id="tab-vod">
                <a class="nav-link link-dark" id="vod">영상</a>
            </li>
            <li class="nav-item" id="tab-photo">
                <a class="nav-link link-dark" id="photo">포토</a>
            </li>
        </ul>
    </div>
    <div class="page-inner">
        <div class="page-section" id="detail_page">
            <div class="container">
                <h2>줄거리</h2>
                <p>{{plot}}</p>
            </div>
        </div>
        <div class="page-section" id="people_page">
            <div class="container" id="tab2-section">
                <div class="d-flex align-items-center">
                    <h2>감독</h2>
                    <a role="button" class="btn-less">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" color="black"
                             class="bi bi-dash-circle" viewBox="0 0 16 16">
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                            <path d="M4 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 4 8"/>
                        </svg>
                    </a>
                </div>
                <div class="container" id="tab2-article">
                    <div class="row row-cols-1 row-cols-md-5" id="people-list">
                        {{#directorList}}
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">{{staffNm}}</h5>
                                    <p class="card-text" style="color:gray">감독</p>
                                </div>
                            </div>
                        {{/directorList}}
                    </div>
                    <div class="d-flex justify-content-center">
                        <a role="button" class="btn-more">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                                 color="black"
                                 class="bi bi-plus-circle" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"/>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
            <div class="container" id="tab2-section">
                <div class="d-flex align-items-center">
                    <h2>배우</h2>
                    <a role="button" class="btn-less">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" color="black"
                             class="bi bi-dash-circle" viewBox="0 0 16 16">
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                            <path d="M4 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 4 8"/>
                        </svg>
                    </a>
                </div>
                <div class="container" id="tab2-article">
                    {{#actorList}}
                        <h4>{{staffRoleGroup}}</h4>
                        <div class="row row-cols-1 row-cols-md-5" id="people-list">
                            {{#staff}}
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">{{staffNm}}</h5>
                                        <p class="card-text" style="color:gray">{{staffRole}}</p>
                                    </div>
                                </div>
                            {{/staff}}
                        </div>
                        <div class="d-flex justify-content-center">
                            <a role="button" class="btn-more">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                                     color="black"
                                     class="bi bi-plus-circle" viewBox="0 0 16 16">
                                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                                    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"/>
                                </svg>
                            </a>
                        </div>
                    {{/actorList}}
                </div>
            </div>
            <div class="container" id="tab2-section">
                <div class="d-flex align-items-center">
                    <h2>제작진</h2>
                    <a role="button" class="btn-less">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" color="black"
                             class="bi bi-dash-circle" viewBox="0 0 16 16">
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                            <path d="M4 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 4 8"/>
                        </svg>
                    </a>
                </div>
                <div class="container" id="tab2-article">
                    {{#staffList}}
                        <h4>{{staffRoleGroup}}</h4>
                        <div class="row row-cols-1 row-cols-md-5" id="people-list">
                            {{#staff}}
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">{{staffNm}}</h5>
                                        <p class="card-text" style="color:gray">{{staffRole}}</p>
                                    </div>
                                </div>
                            {{/staff}}
                        </div>
                        <div class="d-flex justify-content-center">
                            <a role="button" class="btn-more">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                                     color="black"
                                     class="bi bi-plus-circle" viewBox="0 0 16 16">
                                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                                    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"/>
                                </svg>
                            </a>
                        </div>
                    {{/staffList}}
                </div>
            </div>
            <div class="container" id="tab2-section">
                <div class="d-flex align-items-center">
                    <h2>영화사</h2>
                    <a role="button" class="btn-less">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" color="black"
                             class="bi bi-dash-circle" viewBox="0 0 16 16">
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                            <path d="M4 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 4 8"/>
                        </svg>
                    </a>
                </div>
                <div class="container" id="tab2-article">
                    {{#companyList}}
                        <h4>{{staffRoleGroup}}</h4>
                        <div class="row row-cols-1 row-cols-md-5" id="people-list">
                            {{#staff}}
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">{{staffNm}}</h5>
                                        <p class="card-text" style="color:gray">{{staffRole}}</p>
                                    </div>
                                </div>
                            {{/staff}}
                        </div>
                        <div class="d-flex justify-content-center">
                            <a role="button" class="btn-more">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                                     color="black"
                                     class="bi bi-plus-circle" viewBox="0 0 16 16">
                                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                                    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"/>
                                </svg>
                            </a>
                        </div>
                    {{/companyList}}
                </div>
            </div>
        </div>
        <div class="page-section" id="vod_page">
            <div class="container">
                <div class="carousel carousel-dark slide" id="video-slider">
                    <div class="carousel-indicators mx-auto" id="slider-indicators">
                        {{#vodList}}
                            <button type='button' data-bs-target='#video-slider' data-bs-slide-to='{{idx}}'
                                    aria-label='Slide {{idx}}'></button>
                        {{/vodList}}
                    </div>
                    <div class="carousel-inner mx-auto" id="slider-inner">
                        {{#vodList}}
                            <div class="carousel-item">
                                <video id="video" class="d-block w-100" width="720" height="405" preload="metadata"
                                       controls>
                                    <source src="{{vodUrl}}" type="video/mp4">
                                </video>
                                <div class="carousel-caption d-none d-md-block">
                                    <h5>{{vodClass}}</h5>
                                </div>
                            </div>
                        {{/vodList}}
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#video-slider"
                            data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#video-slider"
                            data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
        <div class="page-section" id="photo_page">
            <div class="container" id="poster_section">
                <h2>
                    <span class="type">포스터</span>
                    <span id="poster_length"></span>
                </h2>
                <div class="row row-cols-1 row-cols-md-5" id="poster_list">
                    {{#posterList}}
                        <img class="col photo" src="{{imgUrl}}" onerror="this.src='{{altImgUrl}}'"
                             data-bs-toggle="modal" data-bs-target="#img_view_modal">
                    {{/posterList}}
                </div>
            </div>
            <div class="container" id="stll_section">
                <h2>
                    <span class="type">스틸컷</span>
                    <span id="stll_length"></span>
                </h2>
                <div class="row row-cols-1 row-cols-md-5" id="stll_list">
                    {{#stllList}}
                        <img class="col photo" src="{{imgUrl}}" onerror="this.src='{{altImgUrl}}'"
                             data-bs-toggle="modal" data-bs-target="#img_view_modal">
                    {{/stllList}}
                </div>
            </div>
            <div class="modal fade" id="img_view_modal" tabindex="-1" aria-labelledby="modal_text"
                 aria-modal="true" role="dialog">
                <div class="modal-dialog modal-fullscreen">
                    <div class="modal-content">
                        <!-- Modal Header -->
                        <div class="modal-header border-0">
                            <a role="button" class="btn-block" data-bs-dismiss="modal" aria-label="Close">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                                     color="white"
                                     class="bi bi-x-lg" viewBox="0 0 16 16">
                                    <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8z"/>
                                </svg>
                            </a>
                            <h1 class="modal-title fs-4" id="modal_index">
                                <span id="index"></span>
                                <span> / </span>
                                <span id="length"></span>
                            </h1>
                        </div>
                        <div class="modal-body d-flex">
                            <a role="button" class="btn-prev align-self-center" aria-label="Prev">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                                     color="white"
                                     class="bi bi-chevron-left" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd"
                                          d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0"/>
                                </svg>
                            </a>
                            <img class="mx-auto my-auto" id="view_img">
                            <a role="button" class="btn-next align-self-center" aria-label="Next">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                                     color="white"
                                     class="bi bi-chevron-right" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd"
                                          d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708"/>
                                </svg>
                            </a>
                        </div>
                        <div class="modal-footer border-0 d-flex align-items-start">
                            <h1 class="modal-title fs-4" id="modal_title"></h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/movie}}
<script src="/js/movie_detail.js"></script>
<!-- jquery_zoom_plugin JS -->
<script src="/js/jquery.zoom.js"></script>
{{>layouts/footer}}