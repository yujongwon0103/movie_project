{{>layouts/header}}
<main class="boxoffice_content">
    <article id="mainContent" class="boxoffice_article">
        <div class="container">
            <div class="head_section d-flex justify-content-between align-items-center">
                <h3 class="tit_section">{{boxOfficeType}}</h3>
                <div class="item_date">
                    <a href="#" class="link-dark text-decoration-none" id="prev_date">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                             class="bi bi-arrow-left-circle" viewBox="0 0 16 16">
                            <path fill-rule="evenodd"
                                  d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8m15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0m-4.5-.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5z"/>
                        </svg>
                    </a>
                    <span class="boxoffice_date">{{boxOfficeDate}}</span>
                    <a href="#" class="link-dark text-decoration-none p-0" id="next_date">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                             class="bi bi-arrow-right-circle" viewBox="0 0 16 16">
                            <path fill-rule="evenodd"
                                  d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8m15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0M4.5 7.5a.5.5 0 0 0 0 1h5.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5z"/>
                        </svg>
                    </a>
                </div>
                <div class="util_head">
                    <ul class="nav">
                        <li class="nav-item">
                            <a href="#" class="nav-link link-dark" id="daily">일별</a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link link-dark" id="weekly">주간</a>
                        </li>
                        <li class="nav-item">
                            <input type="image" class="nav-link link-dark" src="/img/calendar.svg" id="calendar" alt="">
                        </li>
                    </ul>
                </div>
            </div>
            <div class="row row-cols-1 row-cols-md-5" id="row">
                {{#boxOfficeRank}}
                    <div class="col">
                        <div class="card border-0" id="movie_card">
                            <input type="hidden" id="movieCd" value="{{movieCd}}">
                            <a href="#" class="overflow-hidden position-relative" id="card-img">
                                <img src="{{poster}}" class="card-img-top" alt="{{movieNm}} 포스터" id="poster">
                                <div class="card-img-overlay">
                                    <span class="rank_num">{{rankNum}}</span>
                                    <div class="rating_circle">
                                        <span class="rating">{{rating}}</span>
                                    </div>
                                </div>
                            </a>
                            <div class="card-body p-2">
                                <a href="#" class="link-dark text-decoration-none p-0" id="movie_name">{{movieNm}}</a>
                                <p class="movie_info">
                                    <span class="open_date">{{openDt}}</span>
                                    <span class="audi_acc">{{audiAcc}}명</span>
                                </p>
                            </div>
                        </div>
                    </div>
                {{/boxOfficeRank}}
            </div>
        </div>
        <div class="container">
            <h2>{{boxOfficeType}} ({{boxOfficeDate}})</h2>
            <table class="table table-striped tablesorter">
                <thead>
                <tr>
                    <th class="text-center" scope="col" colspan="2">순위</th>
                    <th class="text-center" scope="col">영화명</th>
                    <th class="text-center" scope="col">영화 개봉일</th>
                    <th class="text-center sorter-parser" scope="col">매출액</th>
                    <th class="text-center sorter-parser" scope="col">매출비율</th>
                    <th class="text-center sorter-parser" scope="col">누적매출액</th>
                    <th class="text-center sorter-parser" scope="col">관객수</th>
                    <th class="text-center sorter-parser" scope="col">누적관객수</th>
                    <th class="text-center sorter-parser" scope="col">스크린수</th>
                    <th class="text-center sorter-parser" scope="col">상영된 횟수</th>
                </tr>
                </thead>
                <tbody>
                {{#boxOfficeTable}}
                    <tr>
                        <td class="text-center">{{rnum}}</td>
                        <td class="text-start">{{rankChange}}</td>
                        <td class="text-start" id="movie_name">{{movieNm}}</td>
                        <td class="text-center">{{openDt}}</td>
                        <td class="text-end">{{salesAmt}}</td>
                        <td class="text-end">{{salesShare}}</td>
                        <td class="text-end">{{salesAcc}}</td>
                        <td class="text-end">{{audiCnt}}</td>
                        <td class="text-end">{{audiAcc}}</td>
                        <td class="text-end">{{scrnCnt}}</td>
                        <td class="text-end">{{showCnt}}</td>
                    </tr>
                {{/boxOfficeTable}}
                </tbody>
            </table>
        </div>
    </article>
</main>
<script src="/js/boxoffice.js"></script>
{{>layouts/footer}}